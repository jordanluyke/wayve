{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "site/app",
        "pretty": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "site",
        "typings/globals"
    ]
}
